@{
  Layout = "_Layout";
}

@using TrollsonaOrganizer.Models;

<h1>Blood Castes</h1>

@if (@Model.Count == 0)
{
  <h3>No castes have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (BloodCaste casteInstance in Model)
    {
      <li>@Html.ActionLink($"{casteInstance.ColorName}", "Details", new { id = casteInstance.BloodCasteId })</li>
    }
  </ul>
}


<p>@Html.ActionLink("Add new", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>