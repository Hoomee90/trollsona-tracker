@{
  Layout = "_Layout";
}

@model TrollsonaOrganizer.Models.Troll

<h4>Edit Troll</h4>

<h3>@Html.DisplayFor(model => model.Name)</h3>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TrollId);

    @Html.LabelFor(model => model.Name);
    @Html.EditorFor(model => model.Name);

    @Html.LabelFor(model => model.BloodCaste, "Blood Caste");
    @Html.DropDownList("BloodCasteId");

    <input type="submit" value="Save">
}

<p>@Html.ActionLink("Back to troll list", "Index")</p>